<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.StatFragment"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/background_color"
        >


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/sfnImageSquare"
            android:layout_height="@dimen/sfnImageSquare"
            android:layout_gravity="center"
            android:layout_marginStart="56dp"
            android:src="@drawable/newmileage"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.533" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="@dimen/sfnImageSquare"
            android:layout_height="@dimen/sfnImageSquare"
            android:layout_gravity="center"
            android:layout_marginEnd="56dp"
            android:src="@drawable/gas"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sfnMiles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miles Driven: "
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/sfnGasExpenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gas Expense: "
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/sfnImageSquare"
            android:layout_height="@dimen/sfnImageSquare"
            android:layout_gravity="center"
            android:layout_marginStart="56dp"
            android:src="@drawable/moneyearned"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/sfnImageSquare"
            android:layout_height="@dimen/sfnImageSquare"
            android:layout_gravity="center"
            android:layout_marginEnd="56dp"
            android:src="@drawable/moneyearned"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/sfnTotalEarned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Earned: "
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />

        <TextView
            android:id="@+id/sfnNetEarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net Earning: "
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/sfnImageSquare"
            android:layout_height="@dimen/sfnImageSquare"
            android:layout_gravity="center"
            android:layout_marginStart="56dp"
            android:src="@drawable/hours"
            app:layout_constraintBottom_toTopOf="@+id/sfnMyMPG"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.497" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/sfnImageSquare"
            android:layout_height="@dimen/sfnImageSquare"
            android:layout_gravity="center"
            android:layout_marginEnd="56dp"
            android:src="@drawable/hourly"
            app:layout_constraintBottom_toTopOf="@+id/sfnMyMPG"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.492" />

        <TextView
            android:id="@+id/sfnHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Hours: "
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/sfnHourly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hourly Rate: "
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />


        <EditText
            android:id="@+id/sfnMyMPG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimated MPG:"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/changeMPG"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update MPG"
            android:textColor="@color/background_color_inverted"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:strokeColor="@color/background_color_inverted" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>