<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    >
        <TextView
            android:id="@+id/money_earned"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Money earned"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_money_amount" />

        <TextView
            android:id="@+id/text_money_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$CASH_MONEY"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/money_earned"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/miles_driven"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Miles driven"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/text_money_amount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_distance" />

        <TextView
            android:id="@+id/text_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MILES"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/miles_driven"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/hours_worked"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hours Worked"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/text_distance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_hours" />

        <TextView
            android:id="@+id/text_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOURS"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/hours_worked"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/date_"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/text_hours"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_date" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE"
            android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@id/date_"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_gasprice"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAS PRICE"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_" />

        <TextView
            android:id="@+id/gas_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAS PRICE $$$$"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_" />

        <TextView
            android:id="@+id/text_gasexpense"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAS EXPENSE"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_gasprice" />

        <TextView
            android:id="@+id/gas_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GAS EXPENSE $$$$"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_gasprice" />

        <Button
            android:id="@+id/btn_delete_trip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_gasexpense" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>